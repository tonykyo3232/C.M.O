<!-- Note: Layout file going to be on center of the home_activity screen
            and display content -->
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!-- Note: We use ViewPager to swap out the views.
                    We call it container because it will contain all
                    fragments that will be used (swapping fragments -->
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>



    </RelativeLayout>


    <!-- Note: Insert this xml into home activity -->


</merge>